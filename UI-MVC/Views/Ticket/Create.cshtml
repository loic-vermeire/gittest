@model SC.UI.Web.MVC.Models.CreateTicketVM

@{
    ViewBag.Title = "Ticket aanmaken";
    Layout = "_Layout";
}

<h2>Ticket aanmaken</h2>

<form asp-action="Create" asp-controller="Ticket" method="post">
    <div class="form-group">
        <label asp-for="AccId">Account-id</label>
        <input asp-for="AccId" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Problem">Probleem</label>
        <input asp-for="Problem" class="form-control"/>
    </div>
    <input type="submit" value="Verzenden"/>
    | <a asp-action="Index" asp-controller="Ticket">Annuleer</a>
</form>
