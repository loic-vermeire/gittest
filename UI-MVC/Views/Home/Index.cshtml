@{
    ViewData["Title"] = "Welkom";
}

<div class="jumbotron">
    <h1>SupportCenter</h1>
    <p>Welkom op het online helpdesk systeem</p>
    <environment names="Development">Development</environment>
    <environment names="Production">Production</environment>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Nieuw ticket</h2>
        <p>Maak een nieuw ticket aan in het systeem</p>
        <a asp-action="Create" asp-controller="Ticket" class="btn btn-default">Nieuw ticket</a>
    </div>
    <div class="col-md-4">
        <h2>Alle tickets</h2>
        <p>Toont een lijst van alle bestaande tickets</p>
        <a asp-controller="Ticket" asp-action="Index" class="btn btn-default">Alle tickets</a>
    </div>    
    <div class="col-md-4">
        <h2>Toon ticket</h2>
        <p>Geeft de details van één ticket</p>
        <form asp-controller="Ticket" asp-action="Details" method="get" class="form-inline">
            <input name="id" type="number" class="form-control" placeholder="Ticketnummer"/>
            <input type="submit" value="Toon ticket" class="btn btn-default"/>
        </form>
    </div>
</div>